{
  "name": "IGdm",
  "version": "2.1.0",
  "description": "Desktop application for Instagram DMs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build -mwl --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ifedapoolarewaju/igdm.git"
  },
  "keywords": [
    "Instagram",
    "messaging",
    "Chat",
    "DM",
    "Social Media"
  ],
  "author": "ifedapo olarewaju",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^2.2.6",
    "electron-updater": "^1.16.0",
    "fb": "^1.1.1",
    "instagram-private-api": "^0.5.15",
    "node-notifier": "^5.1.2",
    "nojs": "^0.1.1"
  },
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-builder": "^12.3.1"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "ifedapoolarewaju",
        "repo": "igdm"
      }
    ],
    "appId": "com.ifedapoolarewaju.desktop.igdm",
    "copyright": "ifedapo Olarewaju 2017",
    "asar": false,
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": "nsis",
      "publisherName": "ifedapoolarewaju",
      "iconUrl": "https://github.com/ifedapoolarewaju/igdm/build/icon.ico"
    }
  }
}
